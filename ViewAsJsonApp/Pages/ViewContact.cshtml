@page
@model ViewAsJsonApp.Pages.ViewContactModel

@{
    ViewData["Title"] = "View Contact";
}

<h1 class="fs-4 text-center">View Contact</h1>

<div class="d-flex justify-content-center">
    <div class="w-75">
        
        <hr />
        <dl class="row">

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.Contact.ContactId)
            </dt>
            <dd class="col-sm-10">
                <span class="fw-bold text-primary">@Html.DisplayFor(model => model.Contact.ContactId)</span>
            </dd>

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.Contact.FirstName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact.FirstName)
            </dd>

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.Contact.LastName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact.LastName)
            </dd>

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.Contact.ContactTypeIdentifierNavigation.ContactTitle)
